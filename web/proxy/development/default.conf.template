limit_req_zone $binary_remote_addr zone=apiratelimit:10m rate=10r/s;

server {
  listen         80;
  listen    [::]:80;
  server_name _;

  charset utf-8;

  location /api/ {
    limit_req zone=apiratelimit burst=20 nodelay;

    proxy_pass http://api:8080;
    rewrite ^/api(.*)$ $1 break;
  }

  location /admin/ {
    proxy_pass http://web-admin:3000;
    access_log  off;
  }

  location / {
    proxy_pass http://web-user:3000;
    access_log  off;
  }
}
