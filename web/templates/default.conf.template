limit_req_zone $binary_remote_addr zone=apiratelimit:10m rate=10r/s burst=20 nodelay;

server {
  listen         ${WEB_PORT};
  listen    [::]:${WEB_PORT};
  server_name _;

  charset utf-8;
  root /var/www/html/;
  index index.html;

  location /api/ {
    limit_req zone=mylimit;

    proxy_pass http://node:${NODE_PORT};
    rewrite ^/api(.*)$ $1 break;
  }

  location / {
    try_files $uri $uri/ /index.html;

    add_header Last-Modified $date_gmt;
    add_header Cache-Control 'no-store, no-cache';
  }
}
